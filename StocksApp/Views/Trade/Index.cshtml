@model StockTrade

@{
    ViewData["Title"] = "Trade";
}

<div class="trading-container">

    <div class="stock-info-panel">
        <div class="stock-header">
            <h1 class="stock-title">
                @Model.StockName <span class="stock-symbol-text">(@Model.StockSymbol)</span>
            </h1>
        </div>

        <div class="price-display">
            <h2 class="big-price">
                <span id="priceDisplay">@Model.Price.ToString("c")</span>
            </h2>
            <p class="price-label">Stock Price</p>
        </div>
    </div>

    <div class="order-panel">
        <h3 class="panel-title">New Order</h3>

        <form method="post">

            <input type="hidden" id="FinnhubToken" value="@ViewBag.apiKey" />
            <input type="hidden" asp-for="StockSymbol" />
            <input type="hidden" asp-for="Price" />
            <input type="hidden" asp-for="StockName" />

            <div class="form-group">
                <label asp-for="Quantity" class="form-label">Quantity:</label>
                <input type="number" asp-for="Quantity" class="form-input" required />
                <span asp-validation-for="Quantity" class="price-label"></span>
            </div>

            <div class="button-group">
                <button type="submit" asp-controller="Trade" asp-action="SellOrder" class="btn btn-sell">
                    ↓ Sell
                </button>

                <button type="submit" asp-controller="Trade" asp-action="BuyOrder" class="btn btn-buy">
                    ↑ Buy
                </button>
            </div>

        </form>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/tradeIndex.js"> </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/Scripts/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/Scripts/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unubtrusive" asp-fallback-src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}